    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Quart",
            "type": "debugpy",
            "request": "launch",
            "module": "quart",
            "cwd": "${workspaceFolder}/app",
            "python": "${workspaceFolder}/.venv/Scripts/python",
            "env": {
                "QUART_APP": "backend",
                "QUART_ENV": "development",
                "QUART_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-reload",
                "-p 5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Frontend: watch",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/app/frontend",
        },
    ]
}
